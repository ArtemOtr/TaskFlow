{
  "dag_name": "get_from_api_and_into_telegram",
  "max_retries": 3,
  "retry_delay": 3,
  "tasks": [
    {
      "id": "fetch_api_data",
      "operation": "fetch_api_data",
      "independent_params": {
        "url": "https://quotes.to.digital/api/random",
        "method": "GET",
        "filename": "something.json"
      },
      "dependent_params": {},
      "dependencies": []
    },
    {
      "id": "json_to_string",
      "operation": "json_to_string",
      "independent_params": {},
      "dependent_params": {
        "data": "fetch_api_data.results.output_file_path"
      },
      "dependencies": ["fetch_api_data"]
    },
    {
      "id": "async_sleep",
      "operation": "async_sleep",
      "independent_params": {
        "sleep_time": 3
      },
      "dependent_params": {},
      "dependencies": ["fetch_api_data"]
    },
    {
      "id": "send_telegram_message",
      "operation": "send_telegram_message",
      "independent_params": {
        "username": "@username",
        "token": "YOUR_BOT_TOKEN"
      },
      "dependent_params": {
        "message": "json_to_string.results.string"
      },
      "dependencies": ["json_to_string"]
    }
  ]
}